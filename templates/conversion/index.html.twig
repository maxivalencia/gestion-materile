{% extends 'base.html.twig' %}

{% block title %}Conversion index{% endblock %}

{% block body %}
    <h1>Conversion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for conversion in conversions %}
            <tr>
                <td>{{ conversion.id }}</td>
                <td>{{ conversion.quantite }}</td>
                <td>
                    <a href="{{ path('app_conversion_show', {'id': conversion.id}) }}">show</a>
                    <a href="{{ path('app_conversion_edit', {'id': conversion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_conversion_new') }}">Create new</a>
{% endblock %}
