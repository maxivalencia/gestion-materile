{% extends 'base.html.twig' %}

{% block title %}Conversion{% endblock %}

{% block body %}
    <h1>Conversion</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ conversion.id }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ conversion.quantite }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_conversion_index') }}" class="btn btn-primary kl-bouton"><i class="fa fa-arrow-left" aria-hidden="true"></i> Retour</a>
