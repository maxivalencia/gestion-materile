    <a href="{{ path('app_conversion_edit', {'id': conversion.id}) }}" class="btn btn-success kl-bouton"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Modifier</a>
    <br>
    {{ include('conversion/_delete_form.html.twig') }}
