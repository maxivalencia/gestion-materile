{% extends 'base.html.twig' %}

{% block title %}Liste des Materiels{% endblock %}

{% block body %}
    <h1>Liste des Materiels</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Reference</th>
                <th>Serie</th>
                <th>Observation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for materiel in materiels %}
            <tr>
                <td>{{ materiel.id }}</td>
                <td>{{ materiel.date ? materiel.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ materiel.reference }}</td>
                <td>{{ materiel.serie }}</td>
                <td>{{ materiel.observation }}</td>
                <td>
                    <a href="{{ path('app_materiel_show', {'id': materiel.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('app_materiel_edit', {'id': materiel.id}) }}" class="btn btn-danger"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_materiel_new') }}" class="btn btn-primary kl-bouton"><i class="fa fa-plus" aria-hidden="true"></i> Ajouter</a>
{% endblock %}
