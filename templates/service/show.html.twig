{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
    <h1>Service</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ service.nom }}</td>
            </tr>
            <tr>
                <th>Sigle</th>
                <td>{{ service.sigle }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ service.mail }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ service.telephone }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_service_index') }}" class="btn btn-primary kl-bouton"><i class="fa fa-arrow-left" aria-hidden="true"></i> Retour</a>
    <br>
    <a href="{{ path('app_service_edit', {'id': service.id}) }}" class="btn btn-success kl-bouton"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Modifier</a>
    <br>
    {{ include('service/_delete_form.html.twig') }}
{% endblock %}
