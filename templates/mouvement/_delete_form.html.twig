<form method="post" action="{{ path('app_mouvement_delete', {'id': mouvement.id}) }}" onsubmit="return confirm('Êtes-vous sûre de vouloir supprimer cet mouvement?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ mouvement.id) }}">
    <button class="btn btn-danger kl-bouton"><i class="fa fa-trash" aria-hidden="true"></i> Supprimer</button>
</form>
