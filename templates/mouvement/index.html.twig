{% extends 'base.html.twig' %}

{% block title %}Liste des Mouvements{% endblock %}

{% block body %}
    <h1>Liste des Mouvements</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantite</th>
                <th>Date</th>
                <th>Reference</th>
                <th>DebutSerie</th>
                <th>FinSerie</th>
                <th>Observation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mouvement in mouvements %}
            <tr>
                <td>{{ mouvement.id }}</td>
                <td>{{ mouvement.quantite }}</td>
                <td>{{ mouvement.date ? mouvement.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ mouvement.reference }}</td>
                <td>{{ mouvement.debutSerie }}</td>
                <td>{{ mouvement.finSerie }}</td>
                <td>{{ mouvement.observation }}</td>
                <td>
                    <a href="{{ path('app_mouvement_show', {'id': mouvement.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('app_mouvement_edit', {'id': mouvement.id}) }}" class="btn btn-danger"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun enregistrement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_mouvement_new') }}" class="btn btn-primary kl-bouton"><i class="fa fa-plus" aria-hidden="true"></i> Ajouter</a>
{% endblock %}
