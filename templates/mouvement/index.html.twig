{% extends 'base.html.twig' %}

{% block title %}Mouvement index{% endblock %}

{% block body %}
    <h1>Mouvement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantite</th>
                <th>Date</th>
                <th>Reference</th>
                <th>DebutSerie</th>
                <th>FinSerie</th>
                <th>Observation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mouvement in mouvements %}
            <tr>
                <td>{{ mouvement.id }}</td>
                <td>{{ mouvement.quantite }}</td>
                <td>{{ mouvement.date ? mouvement.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ mouvement.reference }}</td>
                <td>{{ mouvement.debutSerie }}</td>
                <td>{{ mouvement.finSerie }}</td>
                <td>{{ mouvement.observation }}</td>
                <td>
                    <a href="{{ path('app_mouvement_show', {'id': mouvement.id}) }}">show</a>
                    <a href="{{ path('app_mouvement_edit', {'id': mouvement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_mouvement_new') }}">Create new</a>
{% endblock %}
