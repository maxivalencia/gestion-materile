{% extends 'base.html.twig' %}

{% block title %}Mouvement{% endblock %}

{% block body %}
    <h1>Mouvement</h1>

    <table class="table">
        <tbody>
            <!-- <tr>
                <th>Id</th>
                <td>{{ mouvement.id }}</td>
            </tr> -->
            <tr>
                <th>Quantité</th>
                <td>{{ mouvement.quantite }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ mouvement.date ? mouvement.date|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Référence</th>
                <td>{{ mouvement.reference }}</td>
            </tr>
            <tr>
                <th>Début Numéro de Série</th>
                <td>{{ mouvement.debutSerie }}</td>
            </tr>
            <tr>
                <th>Fin Numéro de Série</th>
                <td>{{ mouvement.finSerie }}</td>
            </tr>
            <tr>
                <th>Observation</th>
                <td>{{ mouvement.observation }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_mouvement_index') }}" class="btn btn-primary kl-bouton"><i class="fa fa-arrow-left" aria-hidden="true"></i> Retour</a>
    <br>
    <a href="{{ path('app_mouvement_edit', {'id': mouvement.id}) }}" class="btn btn-success kl-bouton"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Modifier</a>
    <br>
    {{ include('mouvement/_delete_form.html.twig') }}
{% endblock %}
