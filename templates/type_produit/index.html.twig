{% extends 'base.html.twig' %}

{% block title %}Liste des Types de Produit{% endblock %}

{% block body %}
    <h1>Liste des Types de Produit</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_produit in type_produits %}
            <tr>
                <td>{{ type_produit.id }}</td>
                <td>{{ type_produit.type }}</td>
                <td>
                    <a href="{{ path('app_type_produit_show', {'id': type_produit.id}) }}">show</a>
                    <a href="{{ path('app_type_produit_edit', {'id': type_produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_type_produit_new') }}">Create new</a>
{% endblock %}
