<form method="post" action="{{ path('app_etat_delete', {'id': etat.id}) }}" onsubmit="return confirm('Êtes-vous sûre de vouloir supprimer cet état?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ etat.id) }}">
    <button class="btn btn-danger kl-bouton"><i class="fa fa-trash" aria-hidden="true"></i> Supprimer</button>
</form>
