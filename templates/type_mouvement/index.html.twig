{% extends 'base.html.twig' %}

{% block title %}Liste des Types de Mouvement{% endblock %}

{% block body %}
    <h1>Liste des Types de Mouvement</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Sens</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_mouvement in type_mouvements %}
            <tr>
                <td>{{ type_mouvement.id }}</td>
                <td>{{ type_mouvement.type }}</td>
                <td>{{ type_mouvement.sens }}</td>
                <td>
                    <a href="{{ path('app_type_mouvement_show', {'id': type_mouvement.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('app_type_mouvement_edit', {'id': type_mouvement.id}) }}" class="btn btn-danger"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_type_mouvement_new') }}" class="btn btn-primary kl-bouton"><i class="fa fa-plus" aria-hidden="true"></i> Ajouter</a>
{% endblock %}
