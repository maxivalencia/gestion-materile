{% extends 'base.html.twig' %}

{% block title %}Historique des Materiels{% endblock %}

{% block body %}
    <h1>Historique des Materiels</h1>

    <table class="table">
        <tbody>
            <!-- <tr>
                <th>Id</th>
                <td>{{ historique_materiel.id }}</td>
            </tr> -->
            <tr>
                <th>Objet</th>
                <td>{{ historique_materiel.objet }}</td>
